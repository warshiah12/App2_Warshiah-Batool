<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paintactivity">

    <LinearLayout
        android:id="@+id/ribbonbar"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:background="@drawable/ribbon"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/color1"
            android:layout_margin="12dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color1"/>
        <ImageButton
            android:id="@+id/color2"
            android:layout_margin="12dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color2"/>
        <ImageButton
            android:id="@+id/color3"
            android:layout_margin="12dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color3"/>
        <ImageButton
            android:id="@+id/clear"
            android:layout_margin="19dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:background="@drawable/color4"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ribbonbar">

        <include layout="@layout/draw_canvas"/>

        <Button
            android:id="@+id/about"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="578dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/ic_baseline_info_24" />
    </RelativeLayout>



</RelativeLayout>